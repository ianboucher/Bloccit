<h1>Topics</h1>

 <div class="row">
   <div class="col-md-8">
     <!-- Iterate over each post in @posts. Instance variables created in a
     controller method are available in the corresponing view-->
     <div>
       <!-- The 'render' syntax relies on Rails conventions to find the '_comment'
       partial, loop through the comments for the given post and display them -->
       <%= render @topics %>
     </div>

   </div>
   <!-- Only show 'New Topic' button to signed-in admin users -->
   <% if user_is_authorized_for_topics? %>
     <div class="col-md-4">
       <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
     </div>
   <% end %>

 </div>
