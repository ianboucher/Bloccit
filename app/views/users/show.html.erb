<div class="row">
   <div class="col-md-8">
     <div class="media">
       <br />
       <% avatar_url = avatar_url(@user, 128) %>
       <% if avatar_url %>
         <div class="media-left">
           <!-- User Rails helper image_tag to create an <img> -->
           <%= image_tag avatar_url, class: 'media-object' %>
         </div>
       <% end %>
       <div class="media-body">
         <h2 class="media-heading"><%= @user.name %></h2>
         <small>
           <%= pluralize(@user.posts.count, 'post') %>,
           <div class='js-comments-count'><%= pluralize(@user.comments.count, 'comment') %></div>
         </small>
       </div>
     </div>
   </div>
 </div>

<!-- Display the user's posts and comments using partials -->
 <h2>Posts</h2>
 <%= render @user.posts %>

 <h2>Comments</h2>
 <%= render @user.comments %>
